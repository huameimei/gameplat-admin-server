<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gameplat.admin.mapper.MemberBillMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gameplat.model.entity.member.MemberBill">
        <id column="id" property="id"/>
        <result column="member_id" property="memberId"/>
        <result column="account" property="account"/>
        <result column="member_path" property="memberPath"/>
        <result column="tran_type" property="tranType"/>
        <result column="order_no" property="orderNo"/>
        <result column="amount" property="amount"/>
        <result column="balance" property="balance"/>
        <result column="remark" property="remark"/>
        <result column="content" property="content"/>
        <result column="operator" property="operator"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, member_id, account, member_path, tran_type, order_no, amount, balance, remark, content, operator, create_time
    </sql>

    <select id="findy" resultType="com.gameplat.admin.model.vo.MemberBillVO">
        SELECT <include refid="Base_Column_List"/> FROM member_bill
        WHERE 1 = 1
        <if test="account != null">and account = #{account}</if>
        <if test="orderNo != null and orderNo !=''">and order_no = #{orderNo}</if>
        <if test="tranTypes != null and tranTypes.size()>0">and tran_type in
            <foreach item="item" index="index" collection="tranTypes" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        <if test="beginTime != null and beginTime != ''">and date_format(create_time,'%y%m%d') <![CDATA[ >= ]]>
            date_format(#{beginTime},'%y%m%d')
        </if>
        <if test="endTime != null and endTime != ''">and date_format(create_time,'%y%m%d') <![CDATA[ <= ]]>
            date_format(#{endTime},'%y%m%d')
        </if>
        <if test="superPath != null and superPath != ''">
            and member_path like concat('%/',#{superPath},'/%')
        </if>
        ORDER BY create_time DESC,id DESC
    </select>


    <select id="findBill" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from member_bill
        <where>
            <if test="orderNo != null and orderNo != ''">
                and order_no = #{orderNo}
            </if>
            <if test="tranType != null and tranType != ''">
                and tran_type = #{tranType}
            </if>
        </where>
    </select>


</mapper>
