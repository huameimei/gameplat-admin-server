<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gameplat.admin.mapper.SysUserMapper">

    <resultMap type="com.gameplat.model.entity.sys.SysUser" id="SysUserResult">
        <id property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
        <result property="userName" column="user_name"/>
        <result property="nickName" column="nick_name"/>
        <result property="userType" column="user_type"/>
        <result property="phone" column="phone"/>
        <result property="avatar" column="avatar"/>
        <result property="password" column="password"/>
        <result property="safeCode" column="safe_code"/>
        <result property="changeFlag" column="change_flag"/>
        <result property="status" column="status"/>
        <result property="limitInfo" column="limit_info"/>
        <result property="settings" column="settings"/>
        <result property="loginIp" column="login_ip"/>
        <result property="loginDate" column="login_date"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
        <result property="userLevel" column="user_level"/>
    </resultMap>

    <sql id="selectUserVo">
        select u.user_id,
               u.role_id,
               u.user_name,
               u.nick_name,
               u.user_type,
               u.avatar,
               u.phone,
               u.password,
               u.safe_code,
               u.status,
               u.change_flag,
               u.limit_info,
               u.settings,
               u.user_level,
               u.login_ip,
               u.login_date,
               u.create_by,
               u.create_time,
               u.update_by,
               u.update_time,
               u.remark,
               r.role_id,
               r.role_name,
               r.role_key,
               r.role_sort,
               r.data_scope,
               r.status as role_status
        from sys_user u
                 left join sys_role r on r.role_id = u.role_id
    </sql>

    <select id="selectUserList" resultMap="SysUserResult">
        SELECT u.user_id,
               u.role_id,
               u.nick_name,
               u.user_name,
               u.avatar,
               u.phone,
               u.user_type,
               u.limit_info,
               u.settings,
               u.user_level,
               u.password,
               u.status,
               u.login_ip,
               u.login_date,
               u.create_by,
               u.create_time,
               u.update_by,
               u.update_time,
               u.remark
        FROM sys_user u
            ${ew.customSqlSegment}
    </select>

    <select id="selectUserByUserName" parameterType="String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        WHERE u.user_name = #{userName}
    </select>

    <select id="selectUserById" parameterType="Long" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where u.user_id = #{userId}
    </select>
</mapper>
